<div class="my-3 d-flex justify-content-between align-items-center">
    <h1>Edit guides</h1>
</div>

<div class="row justify-content-start">
    <div class="col-md-6">
        <form action="/guides/<%= guides.id %>/edit" method="post">
            <div class="mb-3">
                <label>Title</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" , name="title" ,
                    value="<%= guides.title %>">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Content</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" , name="content" ,
                    required><%= guides.content %></textarea>
            </div>

            <div class="col-md-3 ">
                <label for="validationCustom04" class="form-label">Notify others</label>
                <select class="form-select" id="validationCustom04" required>
                    <option value="true">Yes</option>
                    <option value="false" selected>No</option>
                </select>

                <div class="col-12 mt-3">
                    <button class="btn btn-primary" type="submit">Edit</button>
                </div>
        </form>
    </div>
</div>