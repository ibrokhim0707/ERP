<div class="my-3 d-flex justify-content-between align-items-center">
    <h1>View Guide</h1>
</div>

<div class="row justify-content-start">
    <div class="col-md-6">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%= guide.title %>
                        </h4>
                        <p class="card-text">
                            <%= guide.content %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body mt-2">
            <% if (currentUser.role==='admin' ) { %>
                <a href="/guides/<%= guide.id %>/edit" class="btn btn-outline-warning me-3" tabindex="-1" role="button"
                    aria-disabled="true">Edit</a>
                <form class="d-inline" action="/guides/<%=guide.id  %>/delete" method="post">
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
                <% } %>
        </div>
    </div>
</div>