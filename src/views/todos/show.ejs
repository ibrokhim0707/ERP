<div class="my-3 justify-content-between align-items-center">
    <div class="row justify-content-start">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-body">
                    <h1 class="card-title">
                        <i>
                            <%= todo.user.firstname %>
                                <%= todo.user.lastName %>
                        </i>
                    </h1>
                </div>
            </div>

            <div class="card mb-2">
                <div class="card-body">
                    <h3 class="card-title">
                        <%= todo.guide.title %>
                    </h3>
                </div>
            </div>

            <div class=" card">
                <div class="card-body">
                    <h5 class="card-text">
                        <%= todo.guide.content %>
                    </h5>

                    <form class="mt-3 d-flex" action="/todos/<%= todo.id %>/complete" method="post">
                        <% if (!todo.complete) { %>
                            <button type="submit" class="btn btn-primary">Tanishib chiqdim</button>
                            <% } %>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
</div>