<div class="my-3 d-flex justify-content-between align-items-center">
    <h1>Edit User</h1>
</div>

<div class="row justify-content-start">
    <div class="col-md-6">
        <form action="/users/<%= user.id %>/edit" method="post">
            <div class="form-group mb-2">
                <label for="validationDefault01" class="form-label">First name</label>
                <input type="text" class="form-control" id="validationDefault01" name="firstname"
                    value="<%= user.firstname %>" required>
            </div>
            <div class="form-group mb-2">
                <label for="validationDefault02" class="form-label">Last name</label>
                <input type="text" class="form-control" id="validationDefault02" name="lastName"
                    value="<%= user.lastName %>" required>
            </div>
            <div class="form-group mb-2">
                <label for="validationDefaultUsername" class="form-label">Username</label>
                <div class="input-group">
                    <span class="input-group-text" id="inputGroupPrepend2">@</span>
                    <input type="text" class="form-control" id="validationDefaultUsername"
                        aria-describedby="inputGroupPrepend2" name="username" value="<%= user.username %>">
                </div>
                <div class="form-group mb-2">
                    <label for="validationDefault05" class="form-label">Age</label>
                    <input type="number" class="form-control" id="validationDefault05" name="age"
                        value="<%= user.age %>" required>
                </div>

            </div>
            <div class="form-group mb-2">
                <label for="validationDefault04" class="form-label">Role</label>
                <select class="form-select" id="validationDefault04" name="role" required>
                    <option value="admin" <%=user.role==='admin' ? 'selected' : "" %>>Admin</option>
                    <option value="Ishchi" <%=user.role==='employee' ? 'selected' : "" %>>Employee</option>
                </select>
            </div>

            <div class="col-12">
                <button class="btn btn-primary" type="submit">Edit</button>
            </div>
        </form>
    </div>
</div>