<div class="my-3 d-flex justify-content-between align-items-center">
    <h1>Users</h1>
    <a href="/users/create" class="btn btn-primary " role="button">Create User </a>
</div>

<table class="table  table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Fullname</th>
            <th scope="col">Age</th>
            <th scope="col">Role</th>
            <th scope="col">Login</th>
            <th class="col-2" scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach((user, index)=> { %>
            <tr>
                <th scope="row">
                    <%= index + 1 %>
                </th>
                <td>
                    <%= `${user.firstname} ${user.lastName}` %>
                </td>
                <td>
                    <%= user.age %>
                </td>
                <td>
                    <%= user.role==='admin' ? 'Admin' : 'Employee' %>
                </td>
                <td>
                    <%= user.username %>
                </td>
                <td class="d-flex gap-2">
                    <a href="/users/<%= user.id %>" class="btn btn-outline-success" tabindex="-1" role="button"
                        aria-disabled="true">View</a>
                    <a href="/users/<%= user.id %>/edit" class="btn btn-outline-warning" tabindex="-1" role="button"
                        aria-disabled="true">Edit</a>
                    <form action="/users/<%= user.id %>/delete" method="post">
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>